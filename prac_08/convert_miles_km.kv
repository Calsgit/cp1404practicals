BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_text
            text: '0'
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_up()
            Button:
                text: 'Down'
                on_press: app.handle_down()
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        text: app.output